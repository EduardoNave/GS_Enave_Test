@model GS_Enave_Test.Models.mat_materia

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h3>Confirmar acción de eliminar</h3>
        <a class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm" asp-action="Index">Regresar a la lista</a>
    </div>
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.mat_nombre)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.mat_nombre)
                            </dd>
                        </dl>

                        <form asp-action="DeleteMateria">
                            <input type="hidden" asp-for="mat_id" />
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}