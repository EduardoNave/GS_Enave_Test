@model IEnumerable<GS_Enave_Test.Models.ListaCompleta>

@{
    ViewData["Title"] = "Home Page";
}


<div class="container">

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="mb-4">
        <h4>Prueba técnica - Grupo Satélite</h4><br />
        <p>Eduardo Nave</p>
    </div>

    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-body">
                @*<form asp-action="Index">*@
                @using (Html.BeginForm())
            {

                    <div class="row mb-4">
                        <div class="col-md-4">
                            <label for="filt_codigo" class="control-label">Buscar por código</label>
                            <input id="filt_codigo" name="filt_codigo" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label for="filt_sexo" class="control-label">Filtrar por sexo</label>
                            <select id="filt_sexo" class="form-control" name="filt_sexo">
                                <option value=""></option>
                                <option value="Femenino">Femenino</option>
                                <option value="Masculino">Masculino</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="filt_grado" class="control-label">Filtrar por grado</label>
                            <select id="filt_grado" class="form-control" name="filt_grado">
                                <option value=""></option>
                                @foreach (var grado in (IEnumerable<GS_Enave_Test.Models.grd_grado>)ViewBag.ListaGrados)
                                {
                                    <option value="@grado.grd_id">@grado.grd_nombre</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <br />
                            <input type="submit" class="btn btn-primary" value="Buscar" />
                        </div>
                    </div>
            }
                @*</form>*@

                <div class="table-responsive">

                    @if (Model.Count() > 0)
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Alumno.alm_codigo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Alumno.alm_nombre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Alumno.alm_edad)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Alumno.alm_sexo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Grado.grd_nombre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Materia.mat_nombre)
                                    </th>
                                    @*<th></th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Alumno.alm_codigo
                                        </td>
                                        <td>
                                            @item.Alumno.alm_nombre
                                        </td>
                                        <td>
                                            @item.Alumno.alm_edad
                                        </td>
                                        <td>
                                            @item.Alumno.alm_sexo
                                        </td>
                                        <td>
                                            @item.Grado.grd_nombre
                                        </td>
                                        <td>
                                            @item.Materia.mat_nombre
                                        </td>
                                        @*<td>
                                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Alumno.alm_id">Edit</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Alumno.alm_id">Delete</a>
                                        </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-center">No hay ningún alumno registrado</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

