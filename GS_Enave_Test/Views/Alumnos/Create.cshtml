@model GS_Enave_Test.Models.alm_alumno

@{
    ViewData["Title"] = "Nuevo Alumno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h3>Nuevo alumno</h3>
        <a class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm" asp-action="Index">Regresar a la lista</a>
    </div>
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="alm_codigo" class="control-label"></label>
                                <input asp-for="alm_codigo" class="form-control" />
                                <span asp-validation-for="alm_codigo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="alm_nombre" class="control-label"></label>
                                <input asp-for="alm_nombre" class="form-control" />
                                <span asp-validation-for="alm_nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="alm_edad" class="control-label"></label>
                                <input asp-for="alm_edad" class="form-control" />
                                <span asp-validation-for="alm_edad" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="alm_sexo" class="control-label"></label>
                                <input asp-for="alm_sexo" class="form-control" />
                                <span asp-validation-for="alm_sexo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="alm_id_grd" class="control-label"></label>
                                <input asp-for="alm_id_grd" class="form-control" />
                                <span asp-validation-for="alm_id_grd" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="alm_observacion" class="control-label"></label>
                                <input asp-for="alm_observacion" class="form-control" />
                                <span asp-validation-for="alm_observacion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Crear nuevo" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}