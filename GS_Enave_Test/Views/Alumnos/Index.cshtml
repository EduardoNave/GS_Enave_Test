@model IEnumerable<GS_Enave_Test.Models.ListadoAlumno>

@{
    ViewData["Title"] = "Lista de alumnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h3>Lista de alumnos</h3>
        <a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" asp-action="Create">Crear nuevo</a>
    </div>

    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">

                    @if (Model.Count() > 0)
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Alumno.alm_codigo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Alumno.alm_nombre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Alumno.alm_edad)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Alumno.alm_sexo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Grado.grd_nombre)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Alumno.alm_observacion)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Alumno.alm_codigo
                                        </td>
                                        <td>
                                            @item.Alumno.alm_nombre
                                        </td>
                                        <td>
                                            @item.Alumno.alm_edad
                                        </td>
                                        <td>
                                            @item.Alumno.alm_sexo
                                        </td>
                                        <td>
                                            @item.Grado.grd_nombre
                                        </td>
                                        <td>
                                            @item.Alumno.alm_observacion
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Alumno.alm_id">Edit</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Alumno.alm_id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-center">No hay ningún alumno registrado</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
